  <% unless current_page?(new_user_registration_path)||current_page?(user_session_path)||current_page?(new_user_password_path)|| current_page?(edit_user_password_path) %>
    <div class="header" id="page-header row">
      <div class="left-header col-sm-5 col-md-5 col-lg-5">
        <div class="brand col-sm-5 col-md-5 col-lg-5">
          <%=link_to ' 可愛いペット',root_path,class: 'glyphicon glyphicon-home'%>
        </div>
        <div class="col-sm-7 col-md-7 col-lg-7 search-box">
          <div class="icon-addon">
            <input type="text" placeholder="<%=t('navbar.search')%>..." class="form-control search-input-box">
            <span class="glyphicon glyphicon-search"></span>
          </div>
        </div>
      </div>
      <div class="col-sm-7 col-md-7 col-lg-7 right-header text-align-right">
        <ul class="right-menu">
          <% if user_signed_in? %>
            <li><%=link_to t('navbar.home'),root_path %></li>
            <li><a href="<%= new_photo_path%>"><%=t('navbar.new')%></a></li>
          <% end %>
          <% if user_signed_in? %>
            <a href="<%= user_path(current_user.id)%>"><img src="<%=current_user.avatar%>" alt="" height="42" width="42"></a>
            <li class="dropdown">
              <span class="dropdown-toggle" type="button" data-toggle="dropdown"><strong><%=current_user.first_name+' '+current_user.last_name||='No name'%></strong>
              <span class="caret"></span></span>
              <ul class="dropdown-menu">
                <li><%=link_to t('navbar.profile'), current_user %></li>
                <li><%=link_to t('navbar.signout'),destroy_user_session_path,method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><a href="<%=user_session_path%>" class="btn btn-default btn-login"><%=t('navbar.signin')%></a></li>
            <li><a href="<%=new_user_registration_path%>" class="btn btn-warning btn-signup"><%=t('navbar.signup')%></a></li>
          <% end %>
          <% if user_signed_in? %>
            <li class="dropdown">
              <span class="dropdown-toggle glyphicon glyphicon-bell" type="button" data-toggle="dropdown"></span>
              <ul id="notifications" class="dropdown-menu">
              </ul>
            </li>
          <% end %>
          <li id="language" class="dropdown" locale="<%=session[:locale]%>">
            <span class="dropdown-toggle" type="button" data-toggle="dropdown">
              <span class="caret"></span>
            </span>
            <ul class="dropdown-menu">
              <li value="en"><a><%=cl_image_tag("en_cv0qbq.png", size:"50x30")%></a></li>
              <li value="ja"><a><%=cl_image_tag("jp_bo0z77.jpg",size:"50x30")%></a></li>
              <li value="vi"><a><%=cl_image_tag("vn_kkraxl.jpg",size:"50x30")%></a></li>                
            </ul>
          </li>
        </ul>
      </div>
    </div>
  <% end %>