<div class="container">
  <div class="row">    
    <div class="main-login">
      <div class="brand center-align">
        <i class="fa fa-camera" aria-hidden="true" style="font-size: 50px"></i>
        <h2>可愛いペット</h2>
      </div>
      <form action="<%=session_path(resource_name)%>" class="form-login" method="post">
        <div class="form-group">
          <div class="col-sm-2 col-md-2 col-lg-2"></div>
          <div class="col-sm-9 col-md-9 col-lg-9 center-align">
            <a href="<%=user_facebook_omniauth_authorize_path%>" class="btn btn-default btn-login-facebook form-control">
              <i class="fa fa-facebook-square" aria-hidden="true"></i>
              <%=t('login.loginwithfacebook')%>             
            </a>
            <p><%=t('login.or')%></p>
          </div>
        </div>
          <div class="form-group">
          <label for="user_email" class="col-sm-2 col-md-2 col-lg-2 control-label"><%=t('login.email')%></label>
          <div class="col-sm-9 col-md-9 col-lg-9">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
              <input class="form-control" autofocus="autofocus" type="email" value="" name="user[email]" id="user_email">
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="user_password" class="col-sm-2 col-md-2 col-lg-2 control-label"><%=t('login.password')%></label>
          <div class="col-sm-9 col-md-9 col-lg-9">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
              <input class="form-control" autocomplete="off" type="password" name="user[password]" id="user_password">
            </div>
          </div>
        </div>
        <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="col-sm-2 col-md-2 col-lg-2"></div>
          <div class="col-sm-9 col-md-9 col-lg-9">
            <input name="user[remember_me]" type="hidden" value="0"><input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">
            <span><b><%=t('login.remember')%></b><p></p></span>
          </div>
        </div>
        <% end -%>
        <div class="form-group">
          <div class="col-sm-2 col-md-2 col-lg-2"></div>
          <div class="col-sm-9 col-md-9 col-lg-9">
            <input type="submit" name="commit" class="form-control btn btn-default btg-login" value="<%=t('login.login')%>">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-2 col-md-2 col-lg-2"></div>
          <div class="col-sm-9 col-md-9 col-lg-9 center-align">
            <p><%=t('login.donthaveaccount')%><%= link_to t('login.signup'), new_registration_path(resource_name) %></p>
            <%= link_to t("login.forgotpassword"), new_password_path(resource_name) %><br />
          </div>
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      </form>
    </div>
  </div>
</div>
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1870991616498940',
      xfbml      : true,
      version    : 'v2.9'
    });
    FB.AppEvents.logPageView();
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
